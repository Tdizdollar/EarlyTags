{
  "name": "early-tags-launcher",
  "version": "1.0.1",
  "description": "Early Tags VR Launcher",
  "main": "main.js",
  "author": "Tdizdollar",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "megajs": "^1.1.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.earlytags.launcher",
    "productName": "Early Tags Launcher",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [ "nsis" ]
    },
    "nsis": {
      "oneClick": false,
      "allowDirChange": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Early Tags Launcher",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "Tdizdollar",
      "repo": "EarlyTags"
    }
  }
}